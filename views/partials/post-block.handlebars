<article class = "post post-{{id}}">
    <h2>
        <a href="/post/{{id}}">
            {{title}}
        </a>
    </h2>
    <p>
        {{content}}
    </p>
    <div class="post-info">
        <div class="author">
            by 
            <a href="/dashboard/{{user.id}}">
                {{user.username}}
            </a>
        </div>
        <div class="date">
            {{format_time createdAt}} on
            {{format_date createdAt}}
        </div>
    </div>
    {{#if (isEqual logged_user user.id)}}
        <button class="btn edit-btn" data-id="{{id}}"> 
            Edit 
        </button>   
        <button class="btn delete-btn" data-id="{{id}}"> 
            Delete 
        </button>            
    {{/if}}
    
</article>