<div>{{user.username}}'s Dashboard</div>

{{#if sameUser}}
    <div class="create-post card">
        <input class="title card-title" type="text" placeholder="Title">
        <textarea name="create-post" id="new-post" cols="10" rows="3" placeholder="Add new post"></textarea>
        <button class="btn save-btn"> Save</button>
    </div>
{{/if}}
<!-- loops for each post and goes to post block partial -->

{{#each posts as |post| }}
    {{> post-block logged_user=../logged_user}}
{{/each}}

<script src="/js/post.js"></script>